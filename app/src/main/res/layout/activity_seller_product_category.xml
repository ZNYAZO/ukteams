<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Sellers.SellerProductCategoryActivity">

    <TextView
        android:id="@+id/slogan_category"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:text="@string/slogan_category"
        android:textAlignment="center"
        android:textSize="26sp"
        android:textStyle="bold"
        />



    <LinearLayout
        android:id="@+id/linear1_category_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/slogan_category"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:layout_marginTop="100dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp">

        <ImageView
            android:id="@+id/sweater"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:src="@drawable/sweater"
            />

        <ImageView
            android:id="@+id/t_shirts"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/tshirt"
            />

        <ImageView
            android:id="@+id/golf_tshirt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/golf_tshirt"
            />

        <ImageView
            android:id="@+id/jackets"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:src="@drawable/jacket"
            />

    </LinearLayout>



    <LinearLayout
        android:id="@+id/linear2_category_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linear1_category_layout"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:layout_marginTop="10dp">

        <ImageView
            android:id="@+id/track_bottom"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/track_bottom"
            />

        <ImageView
            android:id="@+id/short_skin_tight"
            android:layout_width="90dp"
            android:layout_height="80dp"
            android:src="@drawable/skin_tight_short"
            />

        <ImageView
            android:id="@+id/long_skin_tight"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/skin_tight_long"
            />

        <ImageView
            android:id="@+id/vests"
            android:layout_width="70dp"
            android:layout_height="80dp"
            android:src="@drawable/vets"
            android:layout_marginStart="16dp"
            />

    </LinearLayout>



    <LinearLayout
        android:id="@+id/linear3_category_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linear2_category_layout"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:layout_marginTop="10dp">

        <ImageView
            android:id="@+id/socks"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/socks"
            />

        <ImageView
            android:id="@+id/shorts"
            android:layout_width="90dp"
            android:layout_height="80dp"
            android:src="@drawable/shorts"
            />

 <!--       <ImageView
            android:id="@+id/watches"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/watches"
            />

        <ImageView
            android:id="@+id/mobilephones"
            android:layout_width="70dp"
            android:layout_height="80dp"
            android:src="@drawable/mobiles"
            android:layout_marginStart="16dp"
            />-->

    </LinearLayout>

  

</RelativeLayout>